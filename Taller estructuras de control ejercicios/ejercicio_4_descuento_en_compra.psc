Algoritmo ejercicio_4_descuento_en_compra
	//Entrada
	Escribir " Ingrese el valor total de compra: "
	Leer valor_total
	//caja negra
	descuento = valor_total * 0.15
	precio_final = valor_total - descuento
	//salida
	Escribir " Su descuento es del 15%, sería: " ,descuento
	Escribir " El valor final de su compra sería: " , precio_final
	
FinAlgoritmo